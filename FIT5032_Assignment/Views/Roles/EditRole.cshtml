@model FIT5032_Assignment.Models.AspNetUsers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Role</h2>

@using (Html.BeginForm())
{
    <input type="hidden" name="Id" value="@Model.Id" />
    @Html.Label("Roles", "Select New Role")
    <br />
    <h>UserName: @Model.UserName</h>
    <br />
    @Html.DropDownList("roleId", ViewBag.Roles as SelectList, "Select a Role")
    <br />
    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
}

