@*@model FIT5032_Assignment.Models.Booking*@

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <div class="form-group">
        <label for="Description">Description:</label>
        @Html.TextBox("Description", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="BookingDate">Booking Date:</label>
        @Html.TextBox("BookingDate", null, new { @class = "form-control", @id = "datepicker" })
    </div>

    <div class="form-group">
        <label for="AspNetUsersIdDoctor">Doctor:</label>
        @Html.DropDownList("AspNetUsersIdDoctor", (SelectList)ViewBag.AspNetUsersIdDoctor, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    

    <script>
        $(function () {
            $('#datepicker').datepicker();
        })
    </script>
}
